Vagrant.configure('2') do |config|
  config.vm.box = 'generic/arch'
  config.vm.hostname = 'archy'
  config.vm.network 'private_network', ip: '192.168.30.105'

  config.vm.provision 'shell', path: 'upgrade.sh', name: 'upgrade'
  config.vm.provision 'shell', reboot: true, name: 'reboot'
  config.vm.provision 'shell', path: 'install.docker.sh', name: 'install'
  config.vm.provision 'shell', path: 'modify.docker.socket.sh', name: 'modify'
  config.vm.provision 'shell', path: 'config.learn.arch.sh', name: 'learns'
end
